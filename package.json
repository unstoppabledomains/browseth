{
  "name": "browseth",
  "version": "0.0.20",
  "description": "A library for interacting with ethereum, well suited for the browser.",
  "author": "Braden Pezeshki <braden.pezeshki@gmail.com>",
  "homepage": "https://github.com/buyethdomains/browseth",
  "repository": "git@github.com:buyethdomains/browseth.git",
  "bugs": "https://github.com/buyethdomains/browseth/issues",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^4.2.0",
    "@ledgerhq/hw-transport-node-hid": "^4.2.0",
    "@ledgerhq/hw-transport-u2f": "^4.2.0",
    "@types/event-emitter": "^0.3.2",
    "@types/fbemitter": "^2.0.32",
    "@types/node-hid": "^0.5.2",
    "babel-runtime": "^6.26.0",
    "browseth": "^0.0.14",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-util": "^5.1.5",
    "event-emitter": "^0.3.5",
    "fbemitter": "^2.1.1",
    "keccak": "^1.4.0",
    "pbkdf2": "^3.0.14",
    "rlp": "^2.0.0",
    "scryptsy": "^2.0.0",
    "secp256k1": "^3.5.0",
    "uuid": "^3.2.1",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.2",
    "chalk": "^2.3.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "ethereumjs-tx": "^1.3.3",
    "ganache-core": "^2.1.0",
    "jest": "^22.4.3",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.8.1"
  },
  "scripts": {
    "prebuild": "yarn format && yarn lint",
    "build": "yarn tsc --outDir dist",
    "clear": "rm -rf dist",
    "format": "prettier {src,scripts}/*.{js,ts,json} -l --write",
    "lint": "yarn lint-ts && yarn lint-js",
    "lint-ts": "tslint -p .",
    "lint-js": "eslint {src}",
    "rebuild": "yarn clear && yarn --force && yarn build",
    "test": "jest --watch",
    "test:once": "jest --silent"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "no-console": 0
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "node",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.{js,ts}",
      "<rootDir>/**/?(*.)test.{js,ts}"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
